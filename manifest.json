{
  "name": "20-20-20",
  "description": "Giving gentle reminders about the '20-20-20' rule to promote eye health.",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
    "js": ["js/app.js"],
    "matches": ["*://*/*"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "notifications", "alarms"],
  "action": {
    "default_popup": "popup.html"
  }
}